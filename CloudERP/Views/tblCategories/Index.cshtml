@model IEnumerable<DatabaseAccess.tblCategory>

@{
    ViewBag.Title = "All Categories";
}

<h2>All Categories</h2>

<script src="~/Scripts/jquery-3.4.1.js"></script>


<div class="card">
    <div class="card card-flat ">
        <div class="card-header">
            @Html.ActionLink("Create New Category", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
            <input class="form-control col-md-3" style="float:right" type="text" id="searchcategories" name="searchcategories" placeholder="search here" />
        </div>
        <div class="card-body">
            <div class="table-responsive ">
                @*<div class="table-responsive bootgrid">*@
                @*<table class="table table-striped" id="bootgrid-basic">*@
                <table class="table table-striped table-bordered table-hover " id="dataTable">

                    @*<table class="table table-responsive-sm bootgrid">*@
                    <thead>
                        <tr>
                            <th>
                                Category
                            </th>

                            <th>User</th>
                            <th>ACtion</th>
                        </tr>

                    </thead>
                    <tbody id="categorieslist">
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.categoryName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.FullName)
                            </td>

                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary" })
                                @*@Html.ActionLink("Details", "Details", new { id=item.CategoryID }) |
                                 @Html.ActionLink("Delete", "Delete", new { id=item.CategoryID })*@
                            </td>



                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchcategories").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#categorieslist tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });
    });
</script>
 
