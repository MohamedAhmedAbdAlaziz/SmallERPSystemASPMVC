@model IEnumerable<DatabaseAccess.tblSupplier>

@{
    ViewBag.Title = "Branch suppliers";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>


<div class="card">
    <div class="card card-flat ">
        <div class="card-header">

            <input class="form-control col-md-3" style="float:right" type="text" id="search" name="search" placeholder="search here" />
        </div>
        <div class="card-body">
            <div class="table-responsive ">
                @*<div class="table-responsive bootgrid">*@
                @*<table class="table table-striped" id="bootgrid-basic">*@
                <table class="table table-striped table-bordered table-hover " id="dataTable">

                    @*<table class="table table-responsive-sm bootgrid">*@
                    <thead>
                        <tr>
                            <th>
                                Company
                            </th>
                            <th>
                                Branch
                            </th>
                            <th>
                                Supplier Name
                            </th>
                            <th>
                                ConatctNo
                            </th>

                            <th>
                                Email
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                User
                            </th>
                            <th>
                                Discription
                            </th>
                            <th>Actions</th>
                        </tr>

                    </thead>
                    <tbody id="Suplierslist">
                        @foreach (var item in Model)
                        {

                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.tblCompany.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblBranch.BranchName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierConatctNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Discription)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.SupplierID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.SupplierID }, new { @class = "btn btn-default" })  
                                @*@Html.ActionLink("Delete", "Delete", new { id = item.SupplierID })*@
                            </td>



                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#Suplierslist tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });
    });
</script>



 
