@model IEnumerable<DatabaseAccess.tblAccountSetting>

@{
    ViewBag.Title = "Manage Transections";
}



<script src="~/Scripts/jquery-3.4.1.js"></script>


<div class="card">
    <div class="card card-flat ">
        <div class="card-header">
            @Html.ActionLink("Set Account Flow", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
         @ViewBag.Message
            <input class="form-control col-md-3" style="float:right" type="text" id="search" name="search" placeholder="search here" />
        </div>
        <div class="card-body">
            <div class="table-responsive ">
                @*<div class="table-responsive bootgrid">*@
                @*<table class="table table-striped" id="bootgrid-basic">*@
                <table class="table table-striped table-bordered table-hover " id="dataTable">

                    @*<table class="table table-responsive-sm bootgrid">*@
                    <thead>
                        <tr>
                            <th>
                                 Activity
                            </th>
                            <th>
                            Head Account  
                            </th>
                            <th>
                            Control Account    
                            </th>
                            <th>
                                 Sub control
                            </th>

                            <th>Action</th>
                        </tr>

                    </thead>
                    <tbody id="DEfualtAccount">
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblAccountActivity.Name)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblAccountHead.AccountHeadName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblAccountControl.AccountControlName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.tblAccountSubControl.AccountSubControlName)
                            </td>

                            <td>
                                @Html.ActionLink("Update", "Edit", new { id = item.AccountSettingID }, new { @class = "btn btn-success" })
                                @*@Html.ActionLink("Details", "Details", new { id = item.AccountSettingID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.AccountSettingID })*@
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#DEfualtAccount tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });
    });
</script>

 