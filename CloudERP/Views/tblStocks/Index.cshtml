@model IEnumerable<DatabaseAccess.tblStock>

@{
    ViewBag.Title = "Index";
}

<h2>Products </h2>

<script src="~/Scripts/jquery-3.4.1.js"></script>


<div class="card">
    <div class="card card-flat ">
        <div class="card-header">
            @Html.ActionLink("Create New Product", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
            <input class="form-control col-md-3" style="float:right" type="text" id="searchproduct" name="searchproduct" placeholder="search here" />
        </div>
        <div class="card-body">
            <div class="table-responsive ">
                @*<div class="table-responsive bootgrid">*@
                @*<table class="table table-striped" id="bootgrid-basic">*@
                <table class="table table-striped table-bordered table-hover " id="dataTable">

                    @*<table class="table table-responsive-sm bootgrid">*@
                    <thead>
                        <tr>
                            <th>
                                categoryName
                            </th>
                            <th>
                                ProductName
                            </th>
                            <th>
                                Current Quantity
                            </th>
                            @*<th>
            @Html.DisplayNameFor(model => model.SaleUnitPrice)
        </th>*@
                            @*<th>
            @Html.DisplayNameFor(model => model.CurrentPurchaseUnitPrice)
        </th>*@
                            <th>
                                Expiry Date
                            </th>
                            <th>
                                Manufacture
                            </th>
                            @*<th>
            @Html.DisplayNameFor(model => model.StockTreshHoldQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>*@
                            <th>
                                Status
                            </th>
                            @*<th>
            @Html.DisplayNameFor(model => model.tblBranch.BranchName)
        </th>*@

                            @*<th>
            @Html.DisplayNameFor(model => model.tblUser.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblCompany.Name)
        </th>*@
                            <th>Actions</th>
                        </tr>

                    </thead>
                    <tbody id="productlist">
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblCategory.categoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ExpiryDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Manufacture)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>

                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }, new { @class = "btn btn-success" })  
                                @Html.ActionLink("Item details", "Details", new { id = item.ProductID }, new { @class = "btn btn-primary" })  
                                @*@Html.ActionLink("Delete", "Delete", new { id = item.ProductID })*@
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchproduct").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#productlist tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });
    });
</script>


 