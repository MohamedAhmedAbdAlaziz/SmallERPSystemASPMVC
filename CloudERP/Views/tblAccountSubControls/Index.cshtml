@model IEnumerable<DatabaseAccess.tblAccountSubControl>

@{
    ViewBag.Title = "Account Sub Controls";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>


<div class="card">
    <div class="card card-flat ">
        <div class="card-header">
            @Html.ActionLink("New Account Sub Control", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
            <input class="form-control col-md-3" style="float:right" type="text" id="search" name="search" placeholder="search here" />
        </div>
        <div class="card-body">
            <div class="table-responsive ">
                @*<div class="table-responsive bootgrid">*@
                @*<table class="table table-striped" id="bootgrid-basic">*@
                <table class="table table-striped table-bordered table-hover " id="dataTable">

                    @*<table class="table table-responsive-sm bootgrid">*@
                    <thead>
                        <tr>
                            <th>
                                Head Account
                            </th>
                            <th>
                                Control Account
                            </th>
                            <th>
                                Sub Control Account
                            </th>
                            <th>
                                User
                            </th>

                            <th>Actions</th>

                        </tr>

                    </thead>
                    <tbody id="SubAccountslist">
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblAccountHead.AccountHeadName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblAccountControl.AccountControlName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountSubControlName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.FullName)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.AccountSubControlID }, new { @class = "btn btn-success" })
                                @*@Html.ActionLink("Details", "Details", new { id = item.AccountSubControlID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.AccountSubControlID })*@
                            </td>


                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#SubAccountslist tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });
    });
</script>


 


 