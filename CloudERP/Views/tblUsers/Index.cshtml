@model IEnumerable<DatabaseAccess.tblUser>

@{
    ViewBag.Title = "All Users";
}

@*<h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

<script src="~/Scripts/jquery-3.4.1.js"></script>



<div class="card">
    <div class="card card-flat ">
        <div class="card-header">
            @*@Html.ActionLink("Add User", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })*@
            <div class="row">
                <h4 class="col-md-9"><strong>All Users</strong></h4>
                <input class="form-control col-md-3" style="float:right" type="text" id="searchuser" name="searchuser" placeholder="search here" />
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive ">
                @*<div class="table-responsive bootgrid">*@
                @*<table class="table table-striped" id="bootgrid-basic">*@
                <table class="table table-striped table-bordered table-hover " id="dataTable">
                    te
                    @*<table class="table table-responsive-sm bootgrid">*@
                    <thead>
                        <tr>
                              <th>
                                 Full Name
                            </th>
                            <th>
                                Email Address
                            </th>
                            <th>
                              Contact No
                            </th>
                            <th>
                               UserName
                            </th>
                             
                            <th>
                           Status
                            </th>
                            <th>
                            UserType
                            </th>

                        </tr>
                    </thead>
                    <tbody id="listusers">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                 
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUserType.UserType)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-pill-left btn-inverse btn-primary fa fa-edit" })
                                    @Html.ActionLink("Details", "Details", new { id = item.UserID }, new { @class = "btn btn-pill-right btn-inverse btn-primary fa fa-exclamation " })
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.UserID })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchuser").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listusers tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });
    });
</script>
 