@model IEnumerable<DatabaseAccess.tblBranch>

@{
    ViewBag.Title = "All Branchs";
}

 

<script src="~/Scripts/jquery-3.4.1.js"></script>


<div class="card">
    <div class="card card-flat ">
        <div class="card-header">
            @Html.ActionLink("Add Branch Title", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
            <input class="form-control col-md-3" style="float:right" type="text" id="searchbranch" name="searchbranch" placeholder="search here" />
        </div>
        <div class="card-body">
            <div class="table-responsive ">
                @*<div class="table-responsive bootgrid">*@
                @*<table class="table table-striped" id="bootgrid-basic">*@
                <table class="table table-striped table-bordered table-hover " id="dataTable">

                    @*<table class="table table-responsive-sm bootgrid">*@
                    <thead>
                        <tr>
                            
                            <th><p class="text-info">Level</p></th>
                            <th><p class="text-info">Branch Title</p></th>
                            <th><p class="text-info">Contact No</p></th>
                            <th><p class="text-info">Branch Address</p> </th>
                            
                        </tr>
                    </thead>
                    <tbody id="allbranches">
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblBranchType.BranchType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchContact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchAddress)
                            </td>
                            <td>
                                
                                @Html.ActionLink("UpDate Branch", "Edit", new { id = item.BranchID }, new { @class = "btn btn-pill-left btn-inverse btn-primary fa fa-edit" })
                                @Html.ActionLink("View Branch", "Details", new { id = item.BranchID }, new { @class = "btn btn-pill-right btn-inverse btn-primary fa fa-exclamation " })
                                @*@Html.ActionLink("Delete", "Delete", new { id = item.BranchID })*@
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchbranch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allbranches tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });
    });
</script>