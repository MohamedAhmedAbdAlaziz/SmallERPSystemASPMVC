@model IEnumerable<DatabaseAccess.tblUserType>

@{
    ViewBag.Title = "User Types";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>

 

<div class="card">
    <div class="card card-flat ">
        <div class="card-header">
            @Html.ActionLink("Add Uder Type", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
            <input class="form-control col-md-3" style="float:right" type="text" id="searchusertype" name="searchusertype" placeholder="search here" />
        </div>
        <div class="card-body">
            <div class="table-responsive ">
                @*<div class="table-responsive bootgrid">*@
                @*<table class="table table-striped" id="bootgrid-basic">*@
                <table class="table table-striped table-bordered table-hover " id="dataTable">

                    @*<table class="table table-responsive-sm bootgrid">*@
                    <thead>
                        <tr>
                            <th><p class="text-info">User Type</p> </th>
                            <th><p class="text-info">settings</p> </th>
                        
                            @*<th data-column-id="sender">Logo</th>
                                <th data-column-id="received"  >Action</th>*@
                        </tr>
                    </thead>
                    <tbody id="usertypelist">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserType)
                                </td>                              
                                <td>
                                    @Html.ActionLink("UpDate Profile", "Edit", new { id = item.UserTypeID }, new { @class = "btn btn-pill-left btn-inverse btn-primary fa fa-edit" })
                                    @Html.ActionLink("View Profile", "Details", new { id = item.UserTypeID }, new { @class = "btn btn-pill-right btn-inverse btn-primary fa fa-exclamation " })
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.UserTypeID })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchusertype").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#usertypelist tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });
    });
</script>