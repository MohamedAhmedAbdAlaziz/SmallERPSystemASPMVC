        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit Form" class="btn btn-success" />

                @Html.ActionLink("All Employees", "Employee", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
