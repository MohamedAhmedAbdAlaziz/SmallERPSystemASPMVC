@model IEnumerable<DatabaseAccess.tblEmployee>

@{
    ViewBag.Title = "Employee";
}

<h2>Employee</h2>

<script src="~/Scripts/jquery-3.4.1.js"></script>


<div class="card">
    <div class="card card-flat ">
        <div class="card-header">
            @Html.ActionLink("Add Employee", "EmployeeRegistration", null, new { @style = "float:left;", @class = "btn btn-primary" })
            <input class="form-control col-md-3" style="float:right" type="text" id="searchemployee" name="searchemployee" placeholder="search here" />
        </div>
        <div class="card-body">
            <div class="table-responsive ">
                @*<div class="table-responsive bootgrid">*@
                @*<table class="table table-striped" id="bootgrid-basic">*@
                <div class="container" style="margin-top:60px">
                    <div class="row" id="employeelist">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4">

                                <div class="card" style="width: 18rem;">
                                    @*<img class="card-img-top" src="~/Images/myPic.jpg" alt="Card image cap">*@

                                    @if (!string.IsNullOrEmpty(item.Photo))
                                    {
                                        <img class="card-img-top" src="@Url.Content(item.Photo)" style="        width: 100%;
                                        height: 250px;" alt="Card image cap" />

                                    }
                                    <div class="card-body" style="background-color: #a8e1f7 ">

                                        <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Name) :  @Html.DisplayFor(modelItem => item.Designation) </h5>


                                        <p class="card-text">
                                            branch name is   @Html.DisplayFor(modelItem => item.tblBranch.BranchName)<br />
                                            @*Designation      @Html.DisplayFor(modelItem => item.Designation)<br />*@
                                            contact  @Html.DisplayFor(modelItem => item.ContactNo)
                                        </p>
                                        <div style="margin-left:0px;">

                                            <small class="btn-group">
                                                @Html.ActionLink("UpDate Profile", "EmployeeUpdation", new { id = item.EmployeeID }, new { @class = "btn btn-primary btn-sm " })
                                                @Html.ActionLink("Profile", "ViewProfile", new { id = item.EmployeeID }, new { @class = "btn btn-info btn-sm" })

                                                @{
                                                    if (item.UserID == null)
                                                    {
                                                        @Html.ActionLink("Create user", "CreateUser", "BranchEmployee", new { employeeid = item.EmployeeID }, new { @class = "btn btn-success btn-sm" })

                                                    }
                                                    else
                                                    {
                                                        @Html.ActionLink("Updet user", "UpdateUser", "BranchEmployee", new { userid = item.UserID }, new { @class = "btn btn-success btn-sm" })

                                                    }

                                                }

                                                @*@Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })*@
                                            </small>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        }


                    </div>
                </div>



            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchemployee").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#employeelist div").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });
    });
</script>




